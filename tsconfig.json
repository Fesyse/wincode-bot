{
	"compilerOptions": {
		"module": "ESNext",
		"esModuleInterop": true,
		"target": "es2021",
		"moduleResolution": "node",
		"strict": true,
		"lib": ["es2021"],
		"skipLibCheck": true,
		"rootDir": "./src",
		"outDir": "./dist",
		"baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
	},
	"include": [
    "**/*.ts",
    "**/*.js",
    ".d.ts",
    "node_modules/@types",
  ],

}
