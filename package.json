{
  "name": "wincode-bot",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx --watch ./src/app.ts ",
    "lint": "oxlint",
    "build": "echo 'Building DB...' && pnpm db:build && echo '\nLinting...' pnpm lint && rm -rf dist && echo '\nBuilding...'&& pnpm esbuild --bundle ./src/app.ts --outdir=dist --platform=node --minify --packages=external",
    "start": "pnpm pm2 start ./dist/app.js",
    "stop": "pnpm pm2 stop ./dist/app.js",
    "db:build": "pnpm db:generate && pnpm db:push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^22.9.1",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.28.1",
    "esbuild": "^0.24.0",
    "oxlint": "^0.13.0",
    "typescript": "^5.6.3",
    "zod": "^3.23.8",
    "tsx": "^4.19.2"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "argon2": "^0.41.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.3",
    "pg": "^8.13.1",
    "pm2": "^5.4.3",
    "telegraf": "^4.16.3",
    "telegraf-session-local": "^2.1.1",
    "typegram": "^5.2.0"
  }
}
